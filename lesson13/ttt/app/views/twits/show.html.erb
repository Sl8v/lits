<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @twit.user_id %>
</p>

<p>
  <strong>Content:</strong>
  <%= @twit.content %>
</p>

<h2>Comments</h2>
<% @twit.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.user.try(:nickname) %>
  </p>

  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@twit, @twit.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_twit_path(@twit) %> |
<%= link_to 'Back', twits_path %>
